// Custom styles.
//首页文章阴影样式
.post {
    margin-top: 30px;
    margin-bottom: 30px;
    padding: 15px;
    -webkit-box-shadow: 0 0 10px rgba(202, 203, 203, .5);
    -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}

//首页阅读全文样式
.btn:hover, .post-more-link .btn:hover {
    border-color: #555;
    color: #999;
    background: #555;
}
.post-more-link .btn {
    color: #fff;
    font-size: 14px;
    background: #777;
    border-radius: 2px;
    line-height: 2;
}
